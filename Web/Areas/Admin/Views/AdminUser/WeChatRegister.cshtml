@{
    Layout = null;  
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0">
    <title>绑定用户</title>
    <!-- 引入 WeUI -->
    <link rel="stylesheet" href="//cdn.bootcss.com/weui/1.1.1/style/weui.min.css">
    <link rel="stylesheet" href="//cdn.bootcss.com/jquery-weui/1.0.1/css/jquery-weui.min.css">

    <!-- body 最后 -->
    <script src="//cdn.bootcss.com/jquery/1.11.0/jquery.min.js"></script>
    <script src="//cdn.bootcss.com/jquery-weui/1.0.1/js/jquery-weui.min.js"></script>

</head>
<body ontouchstart style="background-color:#eee">
    <!-- 使用 WeUI -->
    <div style="margin-top:5%;text-align:center">
        <img src="@ViewBag.headimgurl" style="height:120px;width: 120px;border-radius: 60px;" />
        <p style="text-align:center;color:red">欢迎你，@ViewBag.nickname</p>
    </div>  
    <div class="weui-cells weui-cells_form">
        <div class="weui-cell weui-cell_switch">
            <div class="weui-cell__bd">绑定登录账户</div>
            <div class="weui-cell__ft">
                <input class="weui-switch" type="checkbox">
            </div>
        </div>
    </div>
        <div class="weui-cells weui-cells_form register" style="display:none">
            <form id="register">
            <div class="weui-cell">
                <div class="weui-cell__hd"><label class="weui-label">真实姓名</label></div>
                <div class="weui-cell__bd">
                    <input class="weui-input" type="text" placeholder="真实姓名">
                </div>
            </div>
            <div class="weui-cell">
                <div class="weui-cell__hd"><label class="weui-label">手机号码</label></div>
                <div class="weui-cell__bd">
                    <input class="weui-input" type="number" placeholder="请输入手机号码">
                </div>
            </div>
            <div class="weui-cell">
                <div class="weui-cell__hd"><label class="weui-label">登录账户</label></div>
                <div class="weui-cell__bd">
                    <input class="weui-input" type="text" placeholder="请输入账户">
                </div>
            </div>
            <div class="weui-cell">
                <div class="weui-cell__hd"><label class="weui-label">密码</label></div>
                <div class="weui-cell__bd">
                    <input class="weui-input" type="password" placeholder="请输入密码">
                </div>
            </div>
            <div class="weui-cell">
                <div class="weui-cell__hd"><label class="weui-label">确认密码</label></div>
                <div class="weui-cell__bd">
                    <input class="weui-input" type="password" placeholder="请再次输入密码">
                </div>
            </div>
           </form>
        </div>
        <div style="margin-left:5%;margin-right: 5%;margin-top:5%">
            <a href="javascript:;" class="weui-btn weui-btn_primary bing">绑定</a>
        </div>
</body>
</html>
<script src="~/Scripts/mylib/common.client.js"></script>
<script type="text/javascript">
    $(function () {
        var isAdd = false;
        $('.weui-switch').change(function () {
            var value = $(this).prop("checked")
            if (value) {
                $('.register').show();
                isAdd = true;
            }
            else {
                $('.register').hide();
                isAdd = false;
            }
        });
        //绑定事件
        $('.bing').on("click", function () {
            if (isAdd) {
                //验证表单
            }
            else {
                //不需要验证表单
             
            }
            client.ajax.ajaxRequest("/Admin/AdminUser/WeChatRegister", null, function (r) {
                //绑定成功

            }, function (r) {
                //绑定失败
                $.toast("绑定失败", "cancel");
            });
        });
    });
</script>