


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header" style="padding:10px;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">添加用户</h4>
        </div>
        <!--主体内容-->
        <div class="modal-body">
            <form class="form-horizontal" role="form" id="dataForm">
                <div class="form-group">
                    <label class="col-sm-2 control-label">头像</label>
                    <div class="col-sm-10">
                        <img src="" class="img-circle" style="height:80px; width:80px; overflow:hidden;
                        background:url(/Scripts/plug-in/picture/uploadimg.jpg) repeat center;background-size:100%;border: solid 2px #CACACA" />
                        <input type="hidden" name="sHeadPicture" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">账号</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="请输入账号" name="sLoginAccout">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">密码</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" placeholder="请输入密码" name="sPassWord">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">确认密码</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" placeholder="确认密码" name="ResPassWord">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">姓名</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="请输入姓名" name="sName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">手机号码</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="请输入手机号码" name="sPhone">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">选择角色</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="sRoleId" name="sRoleId">
                            <option value="False">开放</option>
                            <option value="True">关闭</option>
                        </select>
                    </div>
                </div>
            </form>
        </div>
        <!--主体内容-->
        <div class="modal-footer" style="padding:10px;">
            <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            <button id="ok" type="button" class="btn btn-primary">确认提交</button>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        var admin = new adminPackage();

        //提交操作
        $('#ok').on("click", function () {
            var bootstrapValidator = admin.form.data('bootstrapValidator');
            bootstrapValidator.validate();
            var res = bootstrapValidator.isValid();
            //if (res) {//验证通过
            //    modal.Ajax(admin.route("Insert"), admin.form.serialize(), function (r) {
                 
            //    });
            //}
        });

        //表单验证
        admin.form.bootstrapValidator({
           // live: 'disabled',//是否在输入后立即验证
            message: 'This value is not valid',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                sLoginAccout: {
                    validators: {
                        notEmpty: {
                            message: '登录账号不能为空'
                        }
                    }
                },
                sPassWord: {
                    validators: {
                        notEmpty: {
                            message: '密码不能为空'
                        }
                    }
                },
                ResPassWord: {
                    validators: {
                        notEmpty: {
                            message: '密码不能为空'
                        },
                        identical: {
                            field: 'sPassWord',
                            message: '两次密码输入不一致'
                        }
                    }
                },
                sName: {
                    validators: {
                        notEmpty: {
                            message: '名字不能为空'
                        },
                    }
                },
                sPhone: {
                    validators: {
                        regexp: {
                            regexp: /^((13[0-9]|14[0-9]|15[0-9]|17[0-9]|18[0-9])\d{8})*$/,
                            message: '手机号码格式错误'
                        },
                    }
                },
                sRoleId: {
                    validators: {
                        notEmpty: {
                            message: '请给后台用户分配角色'
                        },
                    }
                },
            }
        });
    });
</script>