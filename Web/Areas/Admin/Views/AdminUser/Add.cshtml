

<!--添加视图-->
@model List<Dictionary<string, object>>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header" style="padding:10px;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">添加用户</h4>
        </div>
        <!--主体内容-->
        <div class="modal-body">
            <form class="form-horizontal" role="form" id="dataForm">
                <div class="form-group">
                    <label class="col-sm-2 control-label">头像</label>
                    <div class="col-sm-10">
                        <div id="sHeadPicture" style="width:100px; height:100px; border-radius:50%; overflow:hidden;border:1px solid #808080"></div>
                        <input type="hidden" name="sHeadPicture" value="" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">账号</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="请输入账号" name="sLoginAccout">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">密码</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" placeholder="请输入密码" name="sPassWord">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">确认密码</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" placeholder="确认密码" name="ResPassWord">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">姓名</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="请输入姓名" name="sName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">手机号码</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="请输入手机号码" name="sPhone">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">选择角色</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="sRoleId" name="sRoleId">
                            @foreach(var m in Model)
                            {
                                <option value="@m["ID"].ToString()">@m["sRoleName"]</option>
                            }
                        </select>
                    </div>
                </div>
            </form>
        </div>
        <!--主体内容-->
        <div class="modal-footer" style="padding:10px;">
            <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            <button id="ok" type="button" class="btn btn-primary">确认提交</button>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        var picture = new upload();
        picture.create("sHeadPicture", { height: 100, width: 100, path: "HeadPicture" });

        var admin = new adminPackage();
        //注册路由
        admin.routeRegister("Admin", "AdminUser");

        //提交操作
        $('#ok').on("click", function () {
            var bootstrapValidator = admin.form.data('bootstrapValidator');
            bootstrapValidator.validate();
            var res = bootstrapValidator.isValid();
            if (res) {//验证通过
                admin.button.disabled();
                admin.Ajax(admin.route("Insert"), admin.form.serialize(), function (r) {
                    admin.tip("添加成功");
                    admin.grid.datagrid("reload");
                    admin.closeModal();
                });
            }
        });

        //表单验证
        admin.formValidator(admin.form, {
            sLoginAccout: {
                validators: {
                    notEmpty: {
                        message: '登录账号不能为空'
                    }
                }
            },
            sPassWord: {
                validators: {
                    notEmpty: {
                        message: '密码不能为空'
                    },
                    stringLength: {
                        min: 6,
                        max: 20,
                        message: '密码长度必须在6到20位之间'
                    },
                }
            },
            ResPassWord: {
                validators: {
                    notEmpty: {
                        message: '密码不能为空'
                    },
                    identical: {
                        field: 'sPassWord',
                        message: '两次密码输入不一致'
                    }
                }
            },
            sName: {
                validators: {
                    notEmpty: {
                        message: '名字不能为空'
                    },
                }
            },
            sPhone: {
                validators: {
                    regexp: {
                        regexp: /^((13[0-9]|14[0-9]|15[0-9]|17[0-9]|18[0-9])\d{8})*$/,
                        message: '手机号码格式错误'
                    },
                }
            },
            sRoleId: {
                validators: {
                    notEmpty: {
                        message: '请给后台用户分配角色'
                    },
                }
            },
        });
    });
</script>