

<!--添加视图-->
@using EFModels
@model CDELINK_WeChatMenu
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header" style="padding:10px;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">添加自定义菜单</h4>
        </div>
        <!--主体内容-->
        <div class="modal-body">
            <form class="form-horizontal" role="form" id="dataForm">
                <input type="hidden" name="ID" value="@Model.ID" />
                <input type="hidden" name="bIsDeleted" value="@Model.bIsDeleted" />
                <div class="form-group">
                    <label class="col-sm-2 control-label">菜单选择</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="sParentMenuId" name="sParentMenuId">
                            @foreach (var m in ViewBag.list)
                            {
                                <option value="@m["ID"].ToString()">@m["sMenuName"]</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">菜单名称</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="请输入菜单名称" name="sMenuName" value="@Model.sMenuName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">动作类型</label>
                    <div class="col-sm-10" style="padding-top:5px;">
                        <input class="iType" name="iType" type="radio" value="1">跳转 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <input class="iType" name="iType" type="radio" value="0">事件
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">跳转URL</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="请输入URL" name="sUrl" value="@Model.sUrl">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">事件KEY值</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="请输入事件KEY值" name="sKey" value="@Model.sKey">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">菜单排序</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" placeholder="请输入菜单排序" name="iOrder" value="@Model.iOrder">
                    </div>
                </div>
            </form>
        </div>
        <!--主体内容-->
        <div class="modal-footer" style="padding:10px;">
            <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            <button id="ok" type="button" class="btn btn-primary">确认提交</button>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('.iType').iCheck({
            labelHover: false,
            cursor: true,
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%'
        });

        var iType = '@Model.iType';
        $('.iType[value=' + iType + ']').iCheck('check');

        var admin = new adminPackage();
        //注册路由
        admin.routeRegister("Admin", "WeChatMenu");

        //提交操作
        $('#ok').on("click", function () {
            var bootstrapValidator = admin.form.data('bootstrapValidator');
            bootstrapValidator.validate();
            var res = bootstrapValidator.isValid();
            if (res) {//验证通过
                admin.button.disabled();
                admin.Ajax(admin.route("Update"), admin.form.serialize(), function (r) {
                    admin.tip("编辑成功");
                    admin.grid.datagrid("reload");
                    admin.closeModal();
                });
            }
        });

        //表单验证
        admin.formValidator(admin.form, {
            sMenuName: {
                validators: {
                    notEmpty: {
                        message: '菜单名称不能为空'
                    }
                }
            },
            iOrder: {
                validators: {
                    notEmpty: {
                        message: '菜单排序不能为空'
                    }
                }
            }
        });
    });
</script>